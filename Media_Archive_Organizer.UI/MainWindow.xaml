<Window x:Class="Media_Archive_Organizer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Archive Organizer" Height="650" Width="850"
        Background="#181818" Foreground="#E0E0E0"
        Icon="app_icon.ico"
        FontFamily="Segoe UI Variable Display, Segoe UI">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>

        <!-- Input Box Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Controls -->
            <RowDefinition Height="*"/>    <!-- Log -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="30,25" Background="#202020" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Media Archive Organizer v1.02" FontSize="26" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <TextBlock Text="Logic 2.0 • Intelligent Sorting • Deduplication" FontSize="14" Foreground="#888" Margin="0,5,0,0"/>
                </StackPanel>
                <!-- Add Image here if we wanted to display the icon inside the window too, but Window Icon covers it -->
            </Grid>
        </Border>

        <!-- Main Controls -->
        <Grid Grid.Row="1" Margin="30,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Left: Path & Options -->
                <ColumnDefinition Width="1.5*"/> <!-- Right: Mode & Action -->
            </Grid.ColumnDefinitions>

            <!-- Column 1: Source & Config -->
            <StackPanel Grid.Column="0" Margin="0,0,40,0">
                <TextBlock Text="SOURCE FOLDER" FontSize="12" FontWeight="Bold" Foreground="#666" Margin="0,0,0,8"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtSourcePath" Grid.Column="0"/>
                    <Button Grid.Column="1" Content="..." Width="45" Margin="10,0,0,0" Click="BtnBrowse_Click"/>
                </Grid>

                <TextBlock Text="ORGANIZE" FontSize="12" FontWeight="Bold" Foreground="#666" Margin="0,20,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="ChkPhotos" Content="Photos" IsChecked="True"/>
                    <CheckBox x:Name="ChkVideos" Content="Videos" IsChecked="True"/>
                </StackPanel>
            </StackPanel>

            <!-- Column 2: Action -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="EXECUTION MODE" FontSize="12" FontWeight="Bold" Foreground="#666" Margin="0,0,0,8"/>
                
                <Border Background="#2A2A2A" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <CheckBox x:Name="ChkDryRun" Content="Dry Run Simulation" IsChecked="True" FontWeight="SemiBold" ToolTip="Simulates the operation without moving any files."/>
                        <TextBlock Text="Highly recommended for first run." FontSize="12" Foreground="#888" Margin="24,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Button x:Name="BtnStart" Content="Start Organization" Background="#007ACC" Margin="0,20,0,0" Height="45" FontSize="16" FontWeight="SemiBold" Click="BtnStart_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Log Area -->
        <Grid Grid.Row="2" Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="ACTIVITY LOG" FontSize="12" FontWeight="Bold" Foreground="#666" Margin="0,0,0,8"/>
            
            <Border Grid.Row="1" Background="#111" CornerRadius="6" BorderBrush="#333" BorderThickness="1">
                <TextBox x:Name="TxtLog" 
                         Background="Transparent" 
                         Foreground="#CCC" 
                         FontFamily="Consolas" 
                         FontSize="13"
                         BorderThickness="0" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="15"
                         TextWrapping="Wrap"/>
            </Border>
        </Grid>
    </Grid>
</Window>

